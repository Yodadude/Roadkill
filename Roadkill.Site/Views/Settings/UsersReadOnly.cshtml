@model IList<IEnumerable<UserSummary>>
@{ 
	ViewBag.Title = "Site users";
}
<h1>Site settings</h1>

@Html.Partial("SettingsMenu")

<div id="settings" class="blueborder rounded5">
	<p>
		<b>Windows/Active Directory authentication is enabled</b><br />
		User names and passwords are not editable with Windows authentication - you should do this through Active Directory.
	</p>
	
	<p>
		To add a user as an admin or editor, make sure they are part of the Windows security group that you have specified for
		the "AdminRolename" and "EditorRolename" settings in the web.config.
	</p>
	
	<h2>Admins (@RoadkillSettings.AdminRoleName)</h2>
	<table class="settingstable">
		@foreach (UserSummary user in Model[0])
		{
		<tr>
			<td class="title">@user.ExistingEmail</td>
		</tr>
		}
	</table>
	<br class="clear" />

	<h2>Editors (@RoadkillSettings.EditorRoleName)</h2>
	<table class="settingstable">
	@foreach (UserSummary user in Model[1])
	{
		<tr>
			<td class="title">@user.ExistingEmail</td>
		</tr>
	}
	</table>
	<br class="clear" />
</div>